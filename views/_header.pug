header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    .header__logo
        img(src='/img/logo-white.png',alt='Natours Logo')
    nav.nav.nav--user
        -if(user)
            a.nav__el.nav_el--logout#logout  Log out
            a.nav__el(href='/me')
                img.nav__user-img(src=`/img/users/${user.photo}`,alt=`${user.name}`)
                -const [fname,lname] = user.name.split(' ') 
                    span= `${fname}`
        -else
            a.nav__el(href='/login') Log in 
            a.nav__el.nav__el--cta(href='/signup') Sign up